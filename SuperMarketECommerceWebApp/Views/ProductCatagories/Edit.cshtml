@model SuperMarketECommerceWebApp.Models.ProductCatagory

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid">

    <div class="row d-flex justify-content-center">

        <div class="col-12 col-sm-12 col-md-8 col-lg-6 col-xl-6 mt-5">

            <form asp-action="Edit">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="CatagoryId" />

                <div class="form-group">
                    <label asp-for="CatagoryName" class="control-label"></label>
                    <input asp-for="CatagoryName" class="form-control" />
                    <span asp-validation-for="CatagoryName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Edit" class="btn btn-primary" />
                </div>

            </form>

        </div>

    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}